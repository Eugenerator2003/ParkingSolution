@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Users";
}

<a asp-action="Create">Create new user</a>

<table class="table">
    <tr><th>Email address</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <form method="get">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-secondary" asp-action="ChangeUserRole" asp-route-id="@user.Id">Change role</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </form>
            </td>
        </tr>
    }
</table>

